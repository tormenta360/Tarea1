<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvagcodigo"
        android:id="@+id/tvagcodigo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvagintegrantes"
        android:id="@+id/tvagintegrantes"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/npagintegrantes"
        android:layout_alignLeft="@+id/npagintegrantes"
        android:layout_alignStart="@+id/npagintegrantes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvagaño"
        android:id="@+id/tvagaño"
        android:layout_marginRight="79dp"
        android:layout_marginEnd="79dp"
        android:layout_alignTop="@+id/tvagintegrantes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <NumberPicker
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/npagaño"
        android:layout_above="@+id/bagingresar"
        android:layout_alignLeft="@+id/tvagaño"
        android:layout_alignStart="@+id/tvagaño" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/biginsertar"
        android:id="@+id/bagingresar"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/npagintegrantes"
        android:layout_alignLeft="@+id/npagintegrantes"
        android:layout_alignStart="@+id/npagintegrantes"
        android:onClick="actualizarGrupo"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bagrestablecer"
        android:id="@+id/bagrestaurar"
        android:layout_alignTop="@+id/bagingresar"
        android:layout_alignRight="@+id/npagaño"
        android:layout_alignEnd="@+id/npagaño"
        android:onClick="limpiarTextoG"/>

    <NumberPicker
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/npagintegrantes"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="28dp"
        android:layout_marginStart="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etagcodigo"
        android:layout_below="@+id/tvagcodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:inputType="number"/>
</RelativeLayout>