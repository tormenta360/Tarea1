<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sv.ues.fia.tarea1.DocenteConsultar"
    android:id="@+id/CARNET">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Carnet"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editCodigo"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Consultar"
        android:id="@+id/BtnConsultar"
        android:layout_below="@+id/editCodigo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:onClick="consultarDocente" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Limpiar"
        android:id="@+id/BtnLimpiar"
        android:layout_below="@+id/editCodigo"
        android:layout_toRightOf="@+id/BtnConsultar"
        android:layout_toEndOf="@+id/BtnConsultar"
        android:layout_marginLeft="79dp"
        android:layout_marginStart="79dp"
        android:onClick="limpiarTexto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Nombre"
        android:id="@+id/textView6"
        android:layout_below="@+id/BtnConsultar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNombreDocente"
        android:layout_below="@+id/BtnConsultar"
        android:layout_toEndOf="@+id/BtnConsultar"
        android:layout_toRightOf="@+id/BtnConsultar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/Apellido"
        android:id="@+id/textView7"
        android:layout_below="@+id/editNombreDocente"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editApellido"
        android:layout_alignTop="@+id/textView7"
        android:layout_toEndOf="@+id/BtnConsultar"
        android:layout_toRightOf="@+id/BtnConsultar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tipo de Contrato"
        android:id="@+id/textView33"
        android:layout_below="@+id/editApellido"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/editCorreo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Correo"
        android:id="@+id/textView34"
        android:layout_below="@+id/textView33"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editCorreo"
        android:layout_below="@+id/editTipoContrato"
        android:layout_alignRight="@+id/editTipoContrato"
        android:layout_alignEnd="@+id/editTipoContrato"
        android:layout_alignLeft="@+id/editApellido"
        android:layout_alignStart="@+id/editApellido" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Telefono"
        android:id="@+id/textView35"
        android:layout_below="@+id/editCorreo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/editTelefono"
        android:layout_below="@+id/editCorreo"
        android:layout_alignRight="@+id/editCorreo"
        android:layout_alignEnd="@+id/editCorreo"
        android:layout_alignLeft="@+id/editCorreo"
        android:layout_alignStart="@+id/editCorreo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/editTipoContrato"
        android:layout_below="@+id/editApellido"
        android:layout_toRightOf="@+id/textView33"
        android:layout_toEndOf="@+id/textView33" />

</RelativeLayout>

