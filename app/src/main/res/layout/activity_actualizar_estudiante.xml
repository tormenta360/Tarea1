<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="sv.ues.fia.tarea1.ActualizarEstudianteActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvae"
        android:id="@+id/tvae"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvaecarnet"
        android:id="@+id/tvaecarnet"
        android:layout_below="@+id/tvae"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:maxLength="7"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etaecarnet"
        android:layout_alignBottom="@+id/tvaecarnet"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/baeactualizar"
        android:layout_toEndOf="@+id/baeactualizar"
        android:maxLength="7"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/baeinsertar"
        android:id="@+id/baeactualizar"
        android:onClick="actualizarEstudiante"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/etaeapellidos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/baelimpiar"
        android:id="@+id/baelimpiar"
        android:onClick="limpiarTexto"
        android:layout_alignTop="@+id/baeactualizar"
        android:layout_alignRight="@+id/etaeapellidos"
        android:layout_alignEnd="@+id/etaeapellidos"
        android:layout_marginRight="44dp"
        android:layout_marginEnd="44dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvaenombres"
        android:id="@+id/tvaenombres"
        android:layout_above="@+id/etaeapellidos"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:id="@+id/etaenombres"
        android:layout_alignBottom="@+id/tvaenombres"
        android:layout_alignLeft="@+id/etaeapellidos"
        android:layout_alignStart="@+id/etaeapellidos"
        android:layout_alignRight="@+id/etaecarnet"
        android:layout_alignEnd="@+id/etaecarnet" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etaeapellidos"
        android:layout_toRightOf="@+id/baeactualizar"
        android:layout_alignRight="@+id/etaecarnet"
        android:layout_alignEnd="@+id/etaecarnet"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tvaeapellidos"
        android:id="@+id/tvaeapellidos"
        android:layout_above="@+id/baeactualizar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
